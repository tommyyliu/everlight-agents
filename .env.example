# Development Mode Configuration
# Set to 'true' for local development (bypasses Google Cloud Tasks)
LOCAL_DEVELOPMENT=true

# Agent Service Configuration
AGENT_ENDPOINT_URL=http://localhost:8001

# Database Configuration (if needed for direct DB access)
DATABASE_URL=postgresql://user:password@localhost:5432/everlight

# Google Gemini API
GOOGLE_API_KEY=your_google_api_key_here

# Google Cloud Tasks Configuration (for production deployment)
# Only needed when LOCAL_DEVELOPMENT=false
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_CLOUD_LOCATION=us-west1
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Local Development Environment for Everlight Agents
# Copy this to .env and update with your actual values

# Agent Service Configuration
AGENT_ENDPOINT_URL=http://localhost:8001
AGENT_SERVICE_TOKEN=optional_bearer_token_for_auth

# Database Configuration (will be updated by start script)
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:54322/postgres

# Google Gemini API (required for AI features)
GOOGLE_API_KEY=your_google_api_key_here

# Google Cloud Tasks Configuration
# For local development (emulator)
CLOUD_TASKS_EMULATOR_HOST=localhost:8085
GOOGLE_CLOUD_PROJECT=everlight-459519
GOOGLE_CLOUD_LOCATION=us-west1

# Firebase Configuration
FIREBASE_PROJECT_ID=everlight-459519

# For production
# GOOGLE_CLOUD_PROJECT=your_project_id
# GOOGLE_CLOUD_LOCATION=us-west1
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json